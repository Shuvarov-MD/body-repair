    .row.justify-content-center
      .col-12.col-sm-6.col-md-4.about__col
        picture.picture
          source(srcset="./img/about/icon/cell/cell.webp, ./img/about/icon/cell/cell@2x.webp 2x", type="image/webp", class="img")
          img(src="#", alt="", srcset="./img/about/icon/cell/cell.png, ./img/about/icon/cell/cell@2x.png 2x", class="img")
        h3.col__subtitle Более 1000 наименований
        p.col__text Возможность заказа и подбора более чем по 2000 наименований деталей
      .col-12.col-sm-6.col-md-4.about__col
        picture.picture
          source(srcset="./img/about/icon/truck/truck.webp, ./img/about/icon/truck/truck@2x.webp 2x", type="image/webp", class="img")
          img(src="#", alt="", srcset="./img/about/icon/cell/truck.png, ./img/about/icon/truck/truck@2x.png 2x", class="img")
